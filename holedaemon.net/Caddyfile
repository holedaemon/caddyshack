www.holedaemon.net, holedaemon.net {
    root * /srv/holedaemon.net
    file_server {
        index index.html
    }
    try_files {path}.html {path}
    templates
    encode gzip

    handle_errors {
        templates
        rewrite * /error
        file_server
        try_files {path}.html {path}
    }
}